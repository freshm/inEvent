<div class="row">
  <div id="authentication_form" class="col-md-6 col-md-offset-3">
    <h2 class="center_text">Registrieren</h2><br />
    <p class="center_text">Du hast bereits ein Konto? <%= link_to "Anmelden", new_user_session_path, id: "registration_link" %></p><br/>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% unless devise_error_messages!.blank? %>
          <div class="alert alert-danger form-error">
            <%= devise_error_messages!  %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-Mail" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Kennwort" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Kennwort wiederholen" %>
        </div>


        <div class="col-md-8 col-md-offset-2">
          <%= f.submit "Registrieren", class: "btn btn-primary", style: "display: block; width: 100%" %>
        </div>
        <br /><br />
        <p class="policy"><a data-toggle="modal" data-target="#myModal" href="#">Nutzungsbedingungen</a>, <a href="#">Datenschutzrichtlinien</a><br /> und <a href="#">Cookie-Richtlinien</a></p>
      <% end %>
    </div>
  </div>

  
  
  <%= render "shared/omniauth" %>
  
  <br />
  </div>
</div>
